<h1><%= @cat.name %></h1>

<table>
  <% @cat_attributes.each do |k,v| %>
    <tr><th><%= k %></th><td><%= v %></td></tr>
  <% end %>


</table>

<table>
  <tr><th>Start Date</th><th>End Date</th><th>Status</th></tr>
  <% @cat_rental_requests.each do |request| %>
    <tr>
      <td><%= request.start_date %></td>
      <td><%= request.end_date %></td>
      <td><%= request.status %></td>
      <td>
        <% if request.pending? %>
        <form method='POST', action='<%= approve_rental_url(request.id)%>' >
        <button type='submit'> Approve!</button>
      </form>
      </td>
        <% end %>
    </tr>
  <% end %>
</table>

<%= link_to 'Make a rental reservation', new_rental_url %>
