<h1>New Cat Rental Request</h1>

<form action="<%= rentals_path %>" method="POST">
  <label for="cat_selection">Which cat do you want to rent? </label>
  <select name='cat_rental_request[cat_id]'>
    <% @cats.each do |cat| %>
      <option value='<%= cat.id %>'> <%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label for='start_date'>Select a starting rental date: </label>
  <input type="date" name='cat_rental_request[start_date]'>
  <br>

  <label for='end_date'>Select a ending rental date: </label>
  <input type="date" name='cat_rental_request[end_date]'>
  <br>

  <input type='submit' value='Make Rental Request' >
</form>
